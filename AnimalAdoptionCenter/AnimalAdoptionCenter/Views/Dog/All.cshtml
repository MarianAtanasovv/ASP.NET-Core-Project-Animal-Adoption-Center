@using Microsoft.CodeAnalysis.CSharp.Syntax
@model AllDogsQueryModel

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <![endif]-->
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <!-- page title -->
        <title>Woof!</title>
        <!--[if lt IE 9]>
        <script src="js/respond.js"></script>
        <![endif]-->
        <!-- Font files -->
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700%7CQuicksand:400,500,700" rel="stylesheet">
        <link href="~/fonts/flaticon/flaticon.css" rel="stylesheet" type="text/css">
        <link href="~/fonts/fontawesome/fontawesome-all.min.css" rel="stylesheet" type="text/css">
        <!-- Fav icons -->
        <link rel="apple-touch-icon" sizes="57x57" href="apple-icon-57x57.png">
        <link rel="apple-touch-icon" sizes="72x72" href="apple-icon-72x72.png">
        <link rel="apple-touch-icon" sizes="114x114" href="apple-icon-114x114.png">
        <link rel="shortcut icon" type="image/x-icon" href="favicon.ico">
        <!-- Bootstrap core CSS -->
        <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <!-- style CSS -->
        <link href="~/css/style.css" rel="stylesheet">
        <!-- plugins CSS -->
        <link href="~/css/plugins.css" rel="stylesheet">
        <!-- Colors CSS -->
        <link href="~/styles/maincolors.css" rel="stylesheet">
    </head>
    <!-- ==== body starts ==== -->
    <body>
        <div class="jumbotron jumbotron-fluid overlay">
            <div class="jumbo-heading">
               
                <!-- section-heading -->
                <div class="section-heading" data-aos="zoom-in">
                    
                    <h1>Adoption</h1>
                </div>
                <!-- /section-heading -->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Adoption</li>
                    </ol>
                </nav>
            </div>
            <!-- /jumbo-heading -->
        </div>
        <!-- /jumbotron -->
        <!-- ==== Page Content ==== -->
        <div class="page">
            <div class="container block-padding pt-0">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <h3>Find a new furry Friend</h3>
                </div>
                <!-- First row: Adopt a pet -->
                <div class="row mt-5">
                    <!-- Pet  -->
                    @foreach (var dog in Model.Dogs)
                    {

                        <div class="adopt-card col-md-6 col-xl-3 res-margin">
                            <div class="card bg-light-custom">
                                <div class="thumbnail text-center">
                                    <!-- Image -->


                                    @foreach (var image in dog.AnimalImages.Take(1))
                                    {
                                        <a asp-controller="Dog" asp-action="Details" asp-route-id="@dog.Id">
                                            <img src="/databaseFiles/Animals/@image.Name" class="border-irregular1 img-fluid" alt="">
                                        </a>
                                    }

                                    
                                    <!-- Name -->
                                    <div class="caption-adoption">
                                        <h6 class="adoption-header">@dog.Name</h6>
                                        <!-- List -->
                                        <ul class="list-unstyled">
                                            <li><strong>Gender: </strong> @dog.Gender</li>
                                            @if (@dog.Aggressive)
                                            {
                                                <li><strong>Aggressive: </strong> Yes</li>
                                            }
                                            else
                                            {
                                                <li><strong>Aggressive: </strong> No</li>
                                            }

                                            <li><strong>Age: </strong>@dog.Age</li>
                                            <li><strong>Breed: </strong>@dog.Breed</li>

                                        </ul>
                                        <!-- Buttons -->
                                        <div class="text-center">
                                            <a asp-controller="Dog" asp-action="Details" asp-route-id="@dog.Id" class="btn btn-primary">More Info</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- /thumbnail -->
                            </div>
                            <!-- /card -->
                        </div>
                    }
                        <!-- /adopt-card -->
                        <!-- /pet -->

                    </div>
                        
                <!-- /row -->
                
                @{ var previousPage = Model.CurrentPage - 1;
                    if (previousPage < 1)
                    {
                        previousPage = 1;
                    }

                    var maxDogs = Math.Ceiling((double)Model.TotalDogs / AllDogsQueryModel.DogsPerPage); }
             

                @{ var shouldButtonBeDisabled = Model.CurrentPage == maxDogs |
                                                !Model.Dogs.Any(); }

                  
                <div class="col-md-12 mt-5">
                    <!-- pagination -->
                    <nav aria-label="pagination">
                        <ul class="pagination float-right">
                          
                            <li class="page-item"><a class="page-link @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
                                                     asp-controller="Dog"
                                                     asp-action="All"
                                                     asp-route-currentPage="@(Model.CurrentPage + 1)"
                                                     asp-route-brand="@Model.Name"
                                                     asp-route-searchTerm="@Model.SearchTerm">Next page</a></li>

                            <li class="page-item"><a class="page-link @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
                                                     asp-controller="Dog"
                                                     asp-action="All"
                                                     asp-route-currentPage="@previousPage"
                                                     asp-route-brand="@Model.Name"
                                                     asp-route-searchTerm="@Model.SearchTerm">Previous page</a></li>
                        </ul>
                    </nav>
                    <!-- /nav -->
                </div>
                <!-- /col-md -->

                <!-- /col-md -->
            </div>
            <!-- /container -->
        </div>
        <script src="~/vendor/jquery/jquery.min.js"></script>
        <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
        <!-- Custom Js -->
        <script src="~/js/custom.js"></script>
        <script src="~/js/plugins.js"></script>
        <!-- Prefix free -->
        <script src="~/js/prefixfree.min.js"></script>
    </body>
</html>

