@model AllDogsQueryModel

    <style>
        .card {
            /* Add shadows to create the "card" effect */
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
        }

            /* On mouse-over, add a deeper shadow */
            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        /* Add some padding inside the card container */
        .container {
            padding: 2px 16px;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            border-radius: 5px; /* 5px rounded corners */
        }

        /* Add rounded corners to the top left and the top right corner of the image */
        img {
            border-radius: 5px 5px 0 0;
        }
    </style>

    <html xmlns="http://www.w3.org/1999/xhtml">
    <body style="background-color: white">


        <partial name="_SearchAndSortDogsPartial" model="@Model"></partial>
        @if (Model.Dogs.Count() == 0)
        {
            <div align="center" class="container" style="height: 300px; width:300px">
                <h3 class="text-center">Sorry, no dogs available for adoption at the moment!</h3>

            </div>

        }


        @foreach (var dog in Model.Dogs)
        {

            <div class="col-md-5" style="float:left; margin-right:15px; margin-left:15px">
                <div class="card">
                    @foreach (var image in dog.AnimalImages.Take(1))
                    {
                    <a asp-controller="Dog" asp-action="Details" asp-route-id="@dog.Id">
                        <img src="/databaseFiles/Animals/@image.Name" style="width: 200px; height:250px;">
                    </a>
                    }
                    <div class="container" style="background:white">
                        <p style="color:purple; font-size:17px">My name is @dog.Name</p>
                    </div>
                </div>
            </div>
        }
        @{ var previousPage = Model.CurrentPage - 1;
            if (previousPage < 1)
            {
                previousPage = 1;
            }

            var maxPage = Math.Ceiling((double)Model.TotalDogs / AllDogsQueryModel.DogsPerPage); }

        <div class="row mb-5" style="float:left">
            <div class="col-md-6">
                <a class="nk-btn nk-btn-rounded nk-btn-color-main-1 nk-btn-hover-color-main-1 @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
                   asp-controller="Dog"
                   asp-action="All"
                   asp-route-currentPage="@previousPage"
                   asp-route-brand="@Model.Name"
                   asp-route-searchTerm="@Model.SearchTerm"
                   asp-route-sorting="@((int)Model.Sorting)"><<</a>
            </div>

            @{ var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
                                                             !Model.Dogs.Any(); }

            <div class="col-md-6" style="float: right">
                <a class="nk-btn nk-btn-rounded nk-btn-color-main-1 nk-btn-hover-color-main-1 float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
                   asp-controller="Dog"
                   asp-action="All"
                   asp-route-currentPage="@(Model.CurrentPage + 1)"
                   asp-route-brand="@Model.Name"
                   asp-route-searchTerm="@Model.SearchTerm"
                   asp-route-sorting="@((int)Model.Sorting)">>></a>
            </div>
        </div>

    </body>
</html>



