@model AdoptionInterviewFormModel
 
<!DOCTYPE html>
<html>
<head>
    <style>
        label {
            font-family: "American Typewriter, serif";
            font-size: 20px;
            color: black;
         
        }
        p {
            font-family: "American Typewriter, serif";
            font-size: 20px;
            color: black;
        }

        input{
            width: 400px;
            margin-top: 10px
            
        }

        .inputAdopton{
            height: 40px;
            
            
        }

        textarea{
            margin-top: 10px
        }
    </style>
</head>
<body style="background-color:white">

    <h2 style="text-align:center; width:100%; margin-top: 100px ">Dog adoption interview</h2>

    <form method="post" style="text-align: center; width: 50%; margin-left: 500px;">
        <div class="form-group">
            <label>Please state your full name!</label><br>
            <input class="form-control" asp-for="Name" type="text"><br><br>
        </div>

        <div class="form-group">
            <label>Give us some information about your home:</label><br>
            <textarea class="form-control" asp-for="HomeInformation" rows="15" class="inputAdopton" type="text"></textarea><br />
        </div>

        <div class="form-group">

            <label class="form-control"asp-for="OwnHome">
                Do you own your home?
                <select>

                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </label><br />
        </div>
        <div class="form-group">

            <label>How long the dog will be left alone each day?</label><br>
            <input class="form-control" asp-for="HoursAlone" type="text"><br><br>
        </div>
        <div class="form-group">

            <label>Does anyone in your family have any allergies.</label><br>
            <input class="form-control" asp-for="AllergiesInFamily" type="text"><br><br>
        </div>
        <div class="form-group">
            <label>A detailed explanation of why you want the particular breed you do.</label><br>
            <textarea class="form-control" asp-for="BreedExplanation" rows="15" class="inputAdopton" type="text"></textarea><br />
        </div>

        <div class="form-group">

            <label>What kind of enclosure you’ll use, if any (such as a dog crate, birdcage, or critter cage)?</label><br>
            <input  class="form-control" asp-for="Enclosure" type="text"><br><br>
        </div>

        <div class="form-group">
            <label>
                How much you know about basic veterinary care, pest control management, or conditions common to the breed?
            </label><br>
            <input class="form-control" asp-for="VetKnowledge" type="text"><br><br>

</div>

            <div class="d-flex justify-content-center">
                <button class="btn btn-primary btn-sm">Submit</button>
            </div>
    </form>

    
</body>
</html>
